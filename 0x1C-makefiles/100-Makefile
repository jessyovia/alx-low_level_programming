# 100-Makefile
CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^

%.o: %.c
	$(CC) $(CFLAGS) -c -o $@ $<

clean:
	@rm -f *~ $(NAME)

oclean:
	@rm -f $(OBJ)

fclean: clean oclean
	@rm -f $(NAME)

re: fclean all

.PHONY: all clean oclean fclean re
